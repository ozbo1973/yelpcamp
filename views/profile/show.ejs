<!-- profile show -->
<% include ../partials/header %>
  <div class="row">
    <div class="col-md-4">
      <h1><%=foundUser.firstname + ' ' + foundUser.lastname%></h1>
      <div class="thumbnail">
        <img class="img-responsive" src="<%=foundUser.avatar%>" alt="">
      </div>
    </div>

    <div class="col-md-8">
      <div class="caption">
        <h3 class="text-center"><%=foundUser.username + "'s Posts"%></h3>
      </div>
      <div class="well">
        <ul class="list-group">
          <%foundCamps.forEach(camp=>{%>
            <li class="list-group-item"><a href="/campgrounds/<%=camp.id%>"><%=camp.name%></a> created: <%=moment(camp.createdAt).fromNow()%> </li>
            <%})%>
          </ul>

      </div>
    </div>
  </div>
  <!-- ./row -->
<% include ../partials/footer %>
