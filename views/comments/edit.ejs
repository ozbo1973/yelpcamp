<% include ../partials/header %>

<div class="all-forms">
  <div class="row">
    <h1>Edit Comment</h1>
    <div class="form-wrapper">
      <form action="/campgrounds/<%= campId %>/comments/<%=commentFound.id%>?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" name="comment[text]" value="<%= commentFound.text %>">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success btn-block">Save Changes</button>
            <a class="btn btn-danger btn-block" href="/campgrounds/<%= campId %>">Cancel</a>
        </div>
      </form>

    </div>
  </div>

</div>

<% include ../partials/footer %>
