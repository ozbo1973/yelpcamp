<% include ../partials/header %>

<div class="all-forms">
  <div class="row">
    <h1>Edit <%= campground.name %></h1>

    <div class="form-wrapper">
      <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" name="camp[name]" value="<%=campground.name%>">
        </div>

        <div class="form-group">
            <input type="number" class="form-control" name="camp[price]" value="<%=campground.price%>" min=".01" step=".01">
        </div>

        <div class="form-group">
            <input type="text" class="form-control" name="camp[img]" value="<%=campground.img%>">
        </div>

        <div class="form-group">
            <input type="text" class="form-control" name="camp[description]" value="<%= campground.description %>">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success btn-block">Save Changes</button>
            <a class="btn btn-danger btn-block" href="/campgrounds">Cancel</a>
        </div>

      </form>

    </div>

  </div>

</div>

<% include ../partials/footer %>
