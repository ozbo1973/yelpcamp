<% include ../partials/header %>

  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>
      <p>View our hand-picked camp sites.</p>
      <p>
        <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
      </p>
    </div>
  </header>

  <div class="row" style="display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach(camp => { %>
      <div class="col-md-3 col-sm-6 text-center">
        <div class="thumbnail">
          <img class="img-responsive" src="<%= camp.img %>" alt="">
          <div class="caption">
            <h4><%= camp.name %></h4>
          </div>
          <p>
            <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">more info</a>
          </p>
        </div>
      </div>
    <% }) %>
  </div>

<% include ../partials/footer %>
